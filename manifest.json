{
  "manifest_version": 3,
  "name": "Meeting Transcription & Translation Assistant",
  "version": "1.0.0",
  "description": "Real-time transcription, translation, and task detection for online meetings",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "background",
    "notifications"
  ],
  "host_permissions": [
    "https://zoom.us/*",
    "https://*.zoom.us/*",
    "https://meet.google.com/*",
    "https://*.meet.google.com/*",
    "https://teams.microsoft.com/*",
    "https://*.teams.microsoft.com/*",
    "https://*.webex.com/*",
    "https://*.gotomeeting.com/*",
    "https://*.skype.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://zoom.us/*",
        "https://*.zoom.us/*",
        "https://meet.google.com/*",
        "https://*.meet.google.com/*",
        "https://teams.microsoft.com/*",
        "https://*.teams.microsoft.com/*",
        "https://*.webex.com/*",
        "https://*.gotomeeting.com/*",
        "https://*.skype.com/*"
      ],
      "js": ["content-script.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Meeting Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "overlay.html",
        "overlay.css",
        "translation-worker.js"
      ],
      "matches": [
        "https://zoom.us/*",
        "https://*.zoom.us/*",
        "https://meet.google.com/*",
        "https://*.meet.google.com/*",
        "https://teams.microsoft.com/*",
        "https://*.teams.microsoft.com/*",
        "https://*.webex.com/*",
        "https://*.gotomeeting.com/*",
        "https://*.skype.com/*"
      ]
    }
  ]
}